<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerLetters"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a4ic1.projektkoncowyfilipowski.Activities.LettersActivity">
    <RelativeLayout
        android:id="@+id/canLetters"
        android:layout_width="match_parent"
        android:layout_height="60dp">
    </RelativeLayout>

    <EditText
        android:id="@+id/editLetters"
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        android:layout_height="60dp" />
    <ImageButton
        android:id="@+id/colorText"
        android:layout_width="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_mode_edit_black_48dp" />
    <ImageButton
        android:id="@+id/colorTextBorder"
        android:layout_width="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_mode_edit_black_48dp" />

    <ScrollView
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linLetters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        >
        <ImageButton
            android:id="@+id/bSaveLetters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_done_black_48dp"
            />
    </RelativeLayout>
</RelativeLayout>
