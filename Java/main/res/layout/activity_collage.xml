<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/collageContainerRelative"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a4ic1.projektkoncowyfilipowski.Activities.CollageActivity">

    <LinearLayout
        android:id="@+id/collageLinLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/kolaz1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/kolaz1"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/kolaz2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/kolaz2"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/kolaz3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/kolaz3"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>
